<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <hs.thang.com.love.util.TextViewC
                style="@style/textview_label"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/listview_item_heigh"
                android:gravity="center_vertical"
                android:text="@string/setting" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/diver_setting"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@color/diver_setting" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listview_item_heigh">

                <hs.thang.com.love.util.TextViewC
                    style="@style/list_item_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/notification" />

                <Switch
                    android:id="@+id/checkbox_screen_time_out"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:checked="false"
                    android:gravity="end|center_vertical" />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/diver_setting"
                    android:background="@color/diver_setting" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listview_item_heigh">

                <hs.thang.com.love.util.TextViewC
                    style="@style/list_item_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/lock_screen" />

                <Switch
                    android:id="@+id/checkbox_flash"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:checked="false"
                    android:gravity="end|center_vertical" />

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/diver_setting"
                    android:background="@color/diver_setting" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listview_item_heigh">

                <hs.thang.com.love.util.TextViewC
                    style="@style/title_item_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/security" />
            </RelativeLayout>

            <include
                layout="@layout/security_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/diver_setting"
                android:background="@color/diver_setting" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listview_item_heigh">

                <hs.thang.com.love.util.TextViewC
                    style="@style/title_item_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/interface_setting" />
            </RelativeLayout>

            <include
                layout="@layout/interface_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/diver_setting"
            android:background="@color/diver_setting" />

        <hs.thang.com.love.util.TextViewC
            android:paddingTop="8dp"
            style="@style/title_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more" />
        <include
            layout="@layout/more_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>